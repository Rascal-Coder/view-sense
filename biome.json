{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": ["ultracite"],
  "files": {
    "ignore": [
      "dist/**",
      "node_modules/**",
      "build/**",
      "**/*.test.ts",
      "docs/**"
    ]
  },
  "linter": {
    "rules": {
      "complexity": {
        "noForEach": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useBlockStatements": "off"
      }
    }
  }
}
